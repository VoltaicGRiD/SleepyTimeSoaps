<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - SleepyTimeSoaps</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="https://code.jquery.com/jquery-1.10.0.min.js"
            integrity="sha256-2+LznWeWgL7AJ1ciaIG5rFP7GKemzzl+K75tRyTByOE="
            crossorigin="anonymous">
    </script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/css/bootstrap.css">

    <!-- build:css css/main.css -->
    <link rel="stylesheet" href="node_modules/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="node_modules/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="node_modules/bootstrap-social/bootstrap-social.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/styles.css" />
    <!-- endbuild -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster|Open+Sans" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <style>
        .nav-item {
            color: white;
            text-decoration: none;
            margin-left: 10px;
            margin-right: 10px;
            font-size: 18pt;
            font-variant: small-caps;
        }

        .custom-nav-link {
            color: white;
            text-decoration: none;
            font-size: 18pt;
            font-variant: small-caps;
        }

        .nav-link {
            color: white !important;
            text-decoration: none;
            margin-left: 20px;
            margin-right: 20px;
        }

        #footer {
            position: fixed;
            width: 100%;
            bottom: 0;
            left: 0;
            height: 20px;
            background: #222;
            color: white;
        }
    </style>

    <script type="text/javascript" src="https://js.squareup.com/v2/paymentform">
    </script>

</head>
<body class="bg-dark" style="margin-top: -50px;">
    @if (User.IsInRole("Admin"))
    {
        <div class="banner" style="text-align: center; padding-top: 20px; padding-bottom: 10px; color: #a363ec; background-color: white;">
            <h4><a href="/Admin/Dashboard">Administration</a></h4>
        </div>
    }
    else
    {
        <div class="banner" style="text-align: center; padding-top: 20px; padding-bottom: 10px; color: #a363ec; background-color: white;">
            <h4>Free Shipping on orders over $30 and Free Shipping anywhere in Colorado! </h4>
        </div>
    }
    <header class="jumbotron jumbotron-fluid" style="background-image: url(../../../../Content/Images/whitewood.jpg); padding-top: 10px; padding-bottom: 10px;">

        <div class="container">

            <div class="row text-center">

                <div class="col-12 col-sm-12 col-md-12 align-self-center">
                    <a href="/Home/Index">
                        <img src="../../../../Content/Images/Company_logo3.png" height="240" width="250" />
                    </a>
                </div>
                <div class="col">

                    <!-- <h1>SleepyTime Soaps</h1> -->

                </div>
                <!-- <div class="col-md-4 col-xl-2"> -->
                <!-- <a href="#reserveForm"><button type="button">Reserve Campsite</button></a> -->
                <!-- <a href="#reserveForm" role="button" class="btn btn-info mt-4 btn-lg"  data-toggle="tooltip" date-placement="bottom"
                data-html="true" title="Or call us at <br / > <strong>1-206-555-2345</strong>">Reserve Campsite</a> -->
                <!-- <a role="button" class="btn btn-info mt-4 btn-lg" date-toggle="modal" data-target="#reserveModal" >Reserve Campsite </a>
                -->
            </div>
        </div>
    </header>


    <nav class="navbar navbar-expand-xl navbar-dark sticky-top">
        <div class="container">
            <!-- <a class="navbar-brand" href="#"> <img src="img/Company_logo3.png" height="30" width="30"/></a> -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nucampNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nucampNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item active"><a class="nav-link" href="/Home/Index">  Home</a> </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Shop
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Products/ShopForHer">for Her</a>
                            <a class="dropdown-item" href="/Products/ShopForHim">for Him</a>
                            <a class="dropdown-item" href="/Products/ShopForThem">for Them</a>
                        </div>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/AnthroExpo/Index">An + Ex</a></li>
                    <!-- <li class="nav-item"><a class="nav-link" href="#"> <i class="fa fa-list fa-lg"></i> Sites</a> </li> -->
                    <li class="nav-item"><a class="nav-link" href="/Home/About"> About</a> </li>
                    <li class="nav-item"><a class="nav-link" href="/Products/Clearance">  Clearance</a> </li>
                    <li class="nav-item"><a class="nav-link" href="/Cart/ReviewCart"> My Bag</a> </li>
                </ul>
                @{
                    var user = Membership.GetUser(System.Web.HttpContext.Current.User.Identity.Name);
                    string email = string.Empty;

                    if (user != null)
                    {
                        email = user.Email;
                        <span class="navbar-text ml-auto">
                            <a role="button" id="loginButton" href="/Account/Dashboard/">
                                @email
                            </a>
                            <a role="button" class="ml-3" id="loginButton" href="/Account/Logout/">
                                Logout
                            </a>
                        </span>
                    }
                    else
                    {
                        <span class="navbar-text ml-auto">
                            <a role="button" id="loginButton" href="/Account/Login">
                                Login
                            </a>
                        </span>
                    }
                }
            </div>
        </div>
    </nav>

    <div id="loginModal" class="modal fade" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Login</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <form>
                            <div class="form-row">
                                <div class="form-group col-12">
                                    <label class="sr-only" for="loginEmail">Email Address</label>
                                    <input type="email" class="form-control form-control-sm" id="loginEmail" placeholder="Enter Email">
                                </div>
                                <div class="form-group col-12">
                                    <label class="sr-only" for="loginPassword">Password</label>
                                    <input type="password" class="form-control form-control-sm" id="loginPassword" placeholder="Password">
                                </div>
                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox">
                                        <label class="form-check-label">Remember Me</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <button type="button" class="btn btn-secondary btn-sm ml-auto" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary btn-sm ml-1">Sign In</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="background-image: url('../../../Content/Images/STS Site Background.png'); background-size: auto;">

        <div style="overflow: hidden; margin-top: -50px; background-repeat: repeat-x repeat-y">

            <div class="container body-content mt-5" style="min-width: 65%; ">
                @RenderBody()
                <hr />
            </div>

            @if (ViewBag.Response != null && !string.IsNullOrWhiteSpace(ViewBag.Response))
            {
                <div class="modal" id="responseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Response</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @ViewBag.Response
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <script type="text/javascript">
                $(window).on('load', function () {
                    $('#responseModal').modal('show');
                });
            </script>

            <footer class="site-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4 text-center">
                            <!-- <h5>Links</h5> -->
                            <ul class="list-unstyled">
                                <li><a href="/Home/Index">Home</a></li>
                                <li>Shop for <a href="/Products/ShopForHer">Her</a> / <a href="/Products/ShopForHim">Him</a> / <a href="/Products/ShopForThem">Them</a></li>
                                <li><a href="/Home/About">About</a></li>
                                <li><a href="/Products/Clearance">Clearance</a></li>
                            </ul>
                        </div>

                        <div class="col-sm-4 text-center">
                            <h2>SleepyTimeSoaps</h2>
                            <a>
                                11375 Nahcolite Point
                                Apt# 203
                                Colorado Springs, CO 80921
                            </a><br />
                            <a role="button" class="btn btn-link" href="mailto:support@sleepytimesoaps.com"><i class="fa fa-envelope fa-lg"></i> support@sleepytimesoaps.com</a>
                        </div>
                        <div class="col-sm-4 text-center">
                            <!-- <h3>Social</h3> -->
                            <a class="btn btn-social-icon" href="https://www.instagram.com/sleepytimesoaps/"><i class="fa fa-instagram"></i></a>
                            <a class="btn btn-social-icon" href="https://www.facebook.com/sleepytimesoaps"><i class="fa fa-facebook"></i></a>
                            <a class="btn btn-social-icon" href="https://www.youtube.com/channel/UCN9sNbywLonYNMK6ws-hjSw"><i class="fa fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </footer>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
    </div>

</body>
</html>
