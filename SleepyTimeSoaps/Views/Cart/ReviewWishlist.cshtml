@using SleepyTimeSoaps.Models
@model SleepyTimeSoaps.Models.ProductsModel

@{
    ViewBag.Title = "ReviewBag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-secondary w-100" style="border-radius: 20px;">

    <div class="bg-image hover-overlay ripple shadow-1-strong rounded m-4" style="padding-top: 20px; padding-bottom: 15px;"
         data-mdb-ripple-color="light">

        <h2 class="text-white">My Wishlist</h2>

        <p class="text-white" style="font-size: 15pt;">Here, you can review your wishlist and add items to your bag.</p>

        <table class="table table-dark" style="border-radius: 15px; table-layout: fixed; padding-bottom: 50px;">
            <thead>
                <tr>
                    <th scope="col" width="5%"></th>
                    <th scope="col" width="65%">Product</th>
                    <th scope="col" width="10%">Price</th>
                    <th scope="col" width="10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <th scope="row">@(Model.Products.IndexOf(product)+1)</th>
                        <td>@product.ProductName</td>
                        <td>$@(product.ProductPrice)</td>
                        <td><a class="btn btn-danger active" style="margin-top: -5px;" role="button">Add to Bag</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" href="/Checkout/Square/">Checkout with Square™</a>
        <a class="btn btn-primary ml-3" href="/Checkout/Paypal">Checkout with Paypal™</a>
    </div>
</div>