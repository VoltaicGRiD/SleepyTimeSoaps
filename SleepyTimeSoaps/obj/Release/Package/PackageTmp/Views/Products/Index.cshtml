@using SleepyTimeSoaps.Models
@model SleepyTimeSoaps.Models.ProductsModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .alignleft {
        float: left;
    }

    .alignright {
        float: right;
    }

    #a:after {
        text-decoration: none;
    }

    .tooltip {
        font-size: 12pt;
    }
</style>

<script src="https://code.jquery.com/jquery-1.10.0.min.js"
        integrity="sha256-2+LznWeWgL7AJ1ciaIG5rFP7GKemzzl+K75tRyTByOE="
        crossorigin="anonymous">
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

<script>
    $("#btnLink").click(function () {
        $('#ModalPopUp').modal('show');
    })

    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>

<div class="bg-secondary w-100" style="border-radius: 20px;">

    <div class="bg-image hover-overlay ripple shadow-1-strong rounded m-4" style="padding-top: 20px;"
         data-mdb-ripple-color="light">

        <h2 class="text-white">Our Products</h2>
        <h4 class="text-white">
            @if (!ViewBag.Message.Contains("Clearance"))
            {@Html.Raw(ViewBag.Message)}
        </h4>
        <p class="text-white" style="font-size: 15pt;">All our products are made with all-natural, responsibly-sourced ingredients. All ingredients for particular products are listed on the product's page.</p>

        <p class="text-white">
            <img src="~/Content/Images/ClearanceTopTag.png" style="object-fit: scale-down; width: 40px; height: 40px" /> = product is on clearance &emsp;
            <img src="~/Content/Images/RecommendedTopTag.png" style="object-fit: scale-down; width: 40px; height: 40px" /> = product is recommended for newcomers
        </p>

        <div class="row flex-fill d-flex justify-content-center">
            @foreach (Product product in Model.Products)
            {
                <a href="/Products/ProductPage/@product.ProductID" style="color: black; text-decoration: none;">
                    <div class="col-sm mb-4 bg-secondary" style="max-width: 272px; min-width: 297px;">
                        <div class="card bg-warning align-self-start">
                            @if (product.ProductIsClearance && product.ProductIsRecommended)
                            {
                                <div style="padding-left: 5px; padding-right: 5px; position: absolute; top: 4px; left: 5px;">
                                    <img src="~/Content/Images/ClearanceTopTag.png" style="object-fit: scale-down; width: 40px; height: 40px" />
                                </div>
                                <div style="padding-left: 5px; padding-right: 5px; position: absolute; top: 4px; left: 40px;">
                                    <img src="~/Content/Images/RecommendedTopTag.png" style="object-fit: scale-down; width: 40px; height: 40px" />
                                </div>
                            }
                            else if (product.ProductIsClearance && !product.ProductIsRecommended)
                            {
                                <div style="padding-left: 5px; padding-right: 5px; position: absolute; top: 4px; left: 5px;">
                                    <img src="~/Content/Images/ClearanceTopTag.png" style="object-fit: scale-down; width: 40px; height: 40px" />
                                </div>
                            }
                            else if (!product.ProductIsClearance && product.ProductIsRecommended)
                            {
                                <div style="padding-left: 5px; padding-right: 5px; position: absolute; top: 4px; left: 5px;">
                                    <img src="~/Content/Images/RecommendedTopTag.png" style="object-fit: scale-down; width: 40px; height: 40px" />
                                </div>
                            }

                            <div class="card-img w-100" style="padding-right: 9px; height: 160px;">
                                <img class="productimg m-1" src="@product.ProductPrimaryImageUrl" style="width: 100%; height: 100%; border-radius: 10px; object-fit: cover; background-image: url('../../Content/Images/Spinner.gif'); background-repeat: no-repeat; background-position: center;" />
                            </div>
                            <div class="card-header text-center" style="height: 50px;">
                                <span style="font-size: 14pt; font-weight: 600;">@product.ProductName</span>

                            </div>
                            <div class="card-body" style="padding: 15px 20px 15px 20px; min-height: 170px; max-height: 170px;" data-toggle="tooltip" data-placement="right" title="@product.ProductDescription">
                                @if (product.ProductDescription.Length > 120)
                                {
                                    string newDescription = product.ProductDescription.Substring(0, 110) + "...";
                                    <p>@newDescription.Trim()</p>
                                }
                                else
                                {
                                    @product.ProductDescription
                                }
                            </div>
                            <div class="card-footer w-100" style="height: 50px; position: absolute; bottom: 0;">
                                <p class="alignleft" style="font-size: 13pt; font-weight: 600;">$@Math.Round(product.ProductPrice) USD</p>
                                <p class="alignright" style="font-weight: 600; margin-top: 2px;">@product.ProductScentProfile</p>
                                <a href="/Cart/AddToCartSimple/@product.ProductID" style="position: absolute; left: 95px; bottom: 10px"><i class="bi bi-bag-plus-fill" style="font-size: 1.5rem;"></i></a>
                            </div>

                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
