@using SleepyTimeSoaps.Models
@model SleepyTimeSoaps.Models.ProductsModel

@{
    ViewBag.Title = "ReviewBag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-1.10.0.min.js"
        integrity="sha256-2+LznWeWgL7AJ1ciaIG5rFP7GKemzzl+K75tRyTByOE="
        crossorigin="anonymous">
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

<script>
    $("#btnLink").click(function () {
        $('#ModalPopUp').modal('show');
    })

    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>

<div class="bg-secondary w-100" style="border-radius: 20px;">

    <div class="bg-image hover-overlay ripple shadow-1-strong rounded m-4" style="padding-top: 20px; padding-bottom: 15px;"
         data-mdb-ripple-color="light">

        <h2 class="text-white">My Bag</h2>

        <p class="text-white" style="font-size: 15pt;">Here, you can review your bag, make changes to your order, and submit any questions or concerns you may have.</p>

        <table class="table table-dark" style="border-radius: 15px; table-layout: fixed; padding-bottom: 50px;">
            <thead>
                <tr>
                    <th scope="col" width="2%"></th>
                    <th scope="col" width="47%">Product</th>
                    <th scope="col" width="12%">Wrapped/Naked</th>
                    <th scope="col" width="5%">Qty</th>
                    <th scope="col" width="5%">$/Item</th>
                    <th scope="col" width="5%">$/Qty</th>
                    <th scope="col" width="8%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <th scope="row">@(Model.Products.IndexOf(product)+1)</th>
                        <td>@product.ProductName</td>
                        <td>@Html.Raw((product.Naked ? "<p style=\"margin-left: 75px\">Naked</p>" : "Wrapped"))</td>
                        <td><input id="quantitySelector" type="number" style="width: 100%;" max="10" value="@product.Quantity" /></td>
                        <td>$@product.ProductPrice</td>
                        <td>$@(product.ProductPrice * product.Quantity)</td>
                        <td><a class="btn btn-danger active" style="margin-top: -5px;" href="/Cart/RemoveFromCart/@product.ProductID" role="button">Remove</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" data-html="true" title="Checkout using Square's secure payment gateway.<br/><br/>You can use a Credit or Debit card with this option." href="/Checkout/NewCheckout/">Checkout</a>
        <a class="btn btn-primary ml-3" data-toggle="tooltip" data-placement="top" data-html="true" title="Checkout using Square's secure payment gateway.<br/><br/>You can use a Credit or Debit card with this option." href="/Checkout/SquareCheckout/">Checkout with Square™</a>
        <a class="btn btn-primary ml-3" style="background-color: #b6b6b6" data-toggle="tooltip" data-placement="top" disabled data-html="true" title="Paypal checkout is currently disabled.<br/><br/>Please use Square checkout, or email admin@sleepytimesoaps.com to place an order.">Checkout with Paypal™</a>
        <!-- PAYPAL BUTTON TOOLTIP :: Checkout using Paypal's secure payment gateway.<br/><br/>You can use a Credit or Debit card with this option. -->
    </div>
</div>

@if (ViewBag.Response != null && !string.IsNullOrWhiteSpace(ViewBag.Response))
{
    <div class="modal" id="responseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content border-danger">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Response</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ViewBag.Response
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(window).on('load', function () {
        $('#responseModal').modal('show');
    });
</script>
